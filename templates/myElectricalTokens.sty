% Electrical ground
% Use as:  $X\Ground {Y}$
\newcommand\Ground{%
	\mathbin{\text{%
		\begin{tikzpicture}[circuit ee IEC,yscale=0.6,xscale=0.5]
			\draw (0,0) to (2ex,0) node[ground,xshift=.65ex] {};
		\end{tikzpicture}}}%
}

